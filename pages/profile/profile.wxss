/* pages/profile/profile.wxss - 清新蓝绿配色 */

.profile-card {
  text-align: center;
  padding: 48rpx 36rpx 36rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #F0FCFB 100%);
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 28rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-bottom: 20rpx;
  background: #F0FCFB;
  border: 4rpx solid #C5F0ED;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.2);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  color: #2C3E50;
  letter-spacing: 1rpx;
}

.register-days {
  font-size: 24rpx;
  color: #4ECDC4;
  font-weight: 600;
}

/* 登录引导 */
.login-guide {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.login-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  animation: wave 1s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.login-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #2C3E50;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.login-desc {
  font-size: 24rpx;
  color: #7F8C8D;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  background: linear-gradient(135deg, #F0FCFB 0%, #E8F8F7 100%);
  border: 3rpx dashed #C5F0ED;
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: center;
  padding: 0;
  overflow: hidden;
  transition: all 0.3s;
}

.btn-avatar:active {
  transform: scale(0.95);
  border-color: #4ECDC4;
  border-style: solid;
}

.btn-avatar::after {
  border: none;
}

.preview-avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.avatar-icon {
  font-size: 60rpx;
  opacity: 0.5;
}

.avatar-text {
  font-size: 20rpx;
  color: #7F8C8D;
  font-weight: 600;
}

.input-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.input-label {
  font-size: 24rpx;
  color: #2C3E50;
  font-weight: 700;
  padding-left: 4rpx;
}

.input-nickname {
  display: block;
  width: 100%;
  padding: 24rpx 28rpx;
  background: #F0FCFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2C3E50;
  border: 2rpx solid #C5F0ED;
  box-sizing: border-box;
  transition: all 0.2s;
  line-height: 44rpx;
  height: 92rpx;
  vertical-align: middle;
}

.input-nickname:focus {
  background: #FFFFFF;
  border-color: #4ECDC4;
}

.btn-save {
  width: 100%;
  background: #4ECDC4;
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.3);
  margin-top: 12rpx;
  letter-spacing: 1rpx;
}

.btn-save:active {
  background: #3DBAB3;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.3);
}

/* 累计数据 */
.stats-card {
  margin-bottom: 16rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.stats-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 36rpx 20rpx;
  background: linear-gradient(135deg, #F0FCFB 0%, #E8F8F7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #C5F0ED;
  transition: all 0.2s;
  height: 200rpx;
}

.stat-box:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.15);
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 800;
  color: #4ECDC4;
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 20rpx;
  color: #7F8C8D;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  text-align: center;
  white-space: nowrap;
}

/* 功能菜单 */
.menu-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  border-bottom: 2rpx solid #E8F8F7;
  transition: background 0.2s;
}

.menu-item:active {
  background: #F0FCFB;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 600;
}

.menu-arrow {
  font-size: 54rpx;
  color: #C5F0ED;
  font-weight: 300;
}
