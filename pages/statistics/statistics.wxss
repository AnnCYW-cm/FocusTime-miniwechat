/* pages/statistics/statistics.wxss - 清新蓝绿配色 */

/* 总览卡片 */
.overview-card {
  margin-top: 16rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.overview-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 28rpx;
  letter-spacing: 1rpx;
}

.overview-stats {
  display: flex;
  gap: 12rpx;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 28rpx 16rpx;
  background: linear-gradient(135deg, #F0FCFB 0%, #E8F8F7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #C5F0ED;
}

.overview-icon {
  font-size: 34rpx;
  margin-bottom: 12rpx;
}

.overview-label {
  font-size: 20rpx;
  color: #7F8C8D;
  margin-top: 6rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  text-align: center;
}

.overview-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #4ECDC4;
  line-height: 1;
}

/* 图表卡片 */
.chart-card {
  margin-top: 16rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.chart-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 28rpx;
  letter-spacing: 1rpx;
}

.chart-container {
  height: 360rpx;
  padding: 20rpx 0;
}

.bar-chart {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 100%;
  gap: 6rpx;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.bar-wrapper {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  margin-bottom: 12rpx;
}

.bar {
  width: 75%;
  background: linear-gradient(to top, #4ECDC4 0%, #7DDDD5 100%);
  border-radius: 10rpx 10rpx 0 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 10rpx;
  min-height: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.25);
  transition: all 0.3s;
}

.bar-label {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.bar-date {
  font-size: 18rpx;
  color: #7F8C8D;
  text-align: center;
  font-weight: 600;
}

/* 趋势卡片 */
.trend-card {
  margin-top: 16rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.trend-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.trend-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 24rpx;
  background: linear-gradient(135deg, #F0FCFB 0%, #E8F8F7 100%);
  border-radius: 16rpx;
  border: 2rpx solid #C5F0ED;
  transition: all 0.2s;
}

.trend-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.15);
}

.trend-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.trend-icon {
  font-size: 28rpx;
}

.trend-label {
  font-size: 26rpx;
  color: #2C3E50;
  font-weight: 600;
}

.trend-value {
  font-size: 32rpx;
  font-weight: 800;
  color: #4ECDC4;
}
