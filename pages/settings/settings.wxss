/* pages/settings/settings.wxss - 清新蓝绿配色 */

.settings-card {
  margin-top: 16rpx;
  padding: 36rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #C5F0ED;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.1);
}

.settings-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.setting-item {
  margin-bottom: 28rpx;
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.setting-icon {
  font-size: 28rpx;
}

.setting-label {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 600;
}

.setting-value {
  font-size: 30rpx;
  color: #4ECDC4;
  font-weight: 800;
  background: linear-gradient(135deg, #F0FCFB 0%, #E8F8F7 100%);
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  border: 2rpx solid #C5F0ED;
}

.setting-slider {
  width: 100%;
}

.slider-hint {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #7F8C8D;
  margin-top: 12rpx;
  font-weight: 600;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #E8F8F7;
}

.switch-item:last-child {
  border-bottom: none;
}

.setting-switch {
  transform: scale(1);
}

.divider {
  height: 2rpx;
  background: linear-gradient(to right, transparent, #C5F0ED, transparent);
  margin: 36rpx 0;
}

.save-section {
  margin-top: 24rpx;
}

.btn-save {
  width: 100%;
  background: #4ECDC4;
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.3);
  letter-spacing: 1rpx;
}

.btn-save:active {
  transform: translateY(2rpx);
  background: #3DBAB3;
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.3);
}
