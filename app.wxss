/**app.wxss - 清新蓝绿现代风格 **/

/* 全局CSS变量 */
page {
  --primary: #4ECDC4;
  --primary-dark: #3DBAB3;
  --primary-light: #7DDDD5;
  --bg-start: #F0FCFB;
  --bg-end: #E8F8F7;
  --border: #C5F0ED;
  --text-1: #2C3E50;
  --text-2: #7F8C8D;
  --text-3: #B0BEC5;
  --white: #FFFFFF;
  --shadow-1: 0 2rpx 8rpx rgba(78, 205, 196, 0.08);
  --shadow-2: 0 4rpx 16rpx rgba(78, 205, 196, 0.12);
  --shadow-3: 0 8rpx 24rpx rgba(78, 205, 196, 0.18);
  --shadow-4: 0 12rpx 32rpx rgba(78, 205, 196, 0.25);
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 20rpx;
  --radius-xl: 24rpx;
}

/* 页面基础样式 */
page {
  background: linear-gradient(180deg, #F8FDFD 0%, #FFFFFF 50%, #F0FCFB 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC',
               'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--text-1);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

/* 容器 */
.container {
  padding: 20rpx 24rpx 120rpx;
  min-height: 100vh;
}

/* 统一卡片 */
.card {
  background: var(--white);
  border-radius: var(--radius-xl);
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-2);
  border: 1rpx solid rgba(78, 205, 196, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s;
}

.card:active::before {
  transform: scaleX(1);
}

.card:active {
  transform: translateY(-4rpx) scale(1.01);
  box-shadow: var(--shadow-4);
}

/* 主按钮 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: var(--white);
  border: none;
  border-radius: var(--radius-md);
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 20rpx rgba(78, 205, 196, 0.35);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.btn-primary::after {
  border: none;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transform: translate(-50%, -50%);
  transition: width 0.5s, height 0.5s;
}

.btn-primary:active {
  transform: translateY(3rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

.btn-primary:active::before {
  width: 300%;
  height: 300%;
}

/* 次要按钮 */
.btn-secondary {
  background: var(--white);
  color: var(--primary);
  border: 2rpx solid var(--border);
  border-radius: var(--radius-md);
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  box-shadow: var(--shadow-1);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: var(--bg-start);
  border-color: var(--primary);
  transform: scale(0.96);
  box-shadow: var(--shadow-2);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.empty-icon {
  font-size: 140rpx;
  opacity: 0.2;
  animation: float 4s ease-in-out infinite;
  filter: grayscale(50%);
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-12rpx) rotate(2deg);
  }
  75% {
    transform: translateY(-6rpx) rotate(-2deg);
  }
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-2);
  line-height: 1.8;
  font-weight: 500;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: linear-gradient(to right, transparent, var(--border), transparent);
  margin: 32rpx 0;
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 18rpx;
  background: var(--bg-start);
  border: 1rpx solid var(--border);
  border-radius: 10rpx;
  font-size: 22rpx;
  color: var(--primary);
  font-weight: 600;
}

/* 徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  height: 44rpx;
  padding: 0 14rpx;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: var(--white);
  border-radius: 22rpx;
  font-size: 22rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

/* 渐变文字 */
.gradient-text {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
}

/* 动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.85;
    transform: scale(1.08);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% {
    background-position: -1000rpx 0;
  }
  100% {
    background-position: 1000rpx 0;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: var(--text-2);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: rotate 0.8s linear infinite;
  margin-right: 20rpx;
}

/* 优先级颜色 */
.priority-high {
  color: #FF6B6B !important;
}

.priority-medium {
  color: #FFA500 !important;
}

.priority-low {
  color: #95E1D3 !important;
}

/* 玻璃态效果 */
.glass {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(30rpx) saturate(180%);
  -webkit-backdrop-filter: blur(30rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

/* 布局工具类 */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.space-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

/* 间距工具类 */
.mt-xs { margin-top: 8rpx; }
.mt-sm { margin-top: 16rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mt-xl { margin-top: 48rpx; }

.mb-xs { margin-bottom: 8rpx; }
.mb-sm { margin-bottom: 16rpx; }
.mb-md { margin-bottom: 24rpx; }
.mb-lg { margin-bottom: 32rpx; }
.mb-xl { margin-bottom: 48rpx; }

.p-xs { padding: 8rpx; }
.p-sm { padding: 16rpx; }
.p-md { padding: 24rpx; }
.p-lg { padding: 32rpx; }
.p-xl { padding: 48rpx; }

/* 文字工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.font-bold { font-weight: 700; }
.font-semibold { font-weight: 600; }
.font-medium { font-weight: 500; }

/* 圆角工具类 */
.rounded-sm { border-radius: var(--radius-sm); }
.rounded-md { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: 50%; }
