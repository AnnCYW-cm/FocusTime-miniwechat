.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: #FFFFFF;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 1000;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.tab-bar-item:active {
  background: rgba(78, 205, 196, 0.05);
}

.tab-icon {
  font-size: 50rpx;
  line-height: 1;
  margin-bottom: 6rpx;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0.7;
}

.tab-icon.active {
  font-size: 58rpx;
  opacity: 1;
  transform: scale(1.1);
  animation: bounce 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes bounce {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.15);
  }
  100% {
    transform: scale(1.1);
  }
}

.tab-text {
  font-size: 20rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  transition: all 0.2s;
}
